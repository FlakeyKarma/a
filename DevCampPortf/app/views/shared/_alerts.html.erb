<% a = "Cognizant Portfolio Page" %>
<% if flash[:alert] %>
	<%= js add_gritter(flash[:alert], title: a, sticky: false, time: 2500) %>
<% elsif flash[:error] %>
	<%= js add_gritter(flash[:error], title: a, sticky: false, time: 2500) %>
<% else %>
	<%= js add_gritter(flash[:notice], title: a, sticky: false, time: 2500) %>
<% end %>