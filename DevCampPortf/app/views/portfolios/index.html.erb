<h1>Portfolio Items</h1>

<%= link_to "Create new items yo", new_portfolio_url %>

<% @portfolio_items.each do |portfolio_items| %>
	<p><%= portfolio_items.title %></p>
	<p><%= portfolio_items.subtitle %></p>
	<p><%= portfolio_items.body %></p>
	<%= portfolio_items.thumb_image  unless portfolio_items.thumb_image.nil? %>
	<%= link_to "//Edit sumthin", edit_portfolio_path(portfolio_items.id) %>
	<a href="/portfolios/<%= portfolio_items.id %>/edit">//Edit sumthin0</a>
<% end %>